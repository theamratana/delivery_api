{
  // Ensure VS Code Java uses a JDK compatible with the project and imports Gradle correctly
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-21",
        "path": "C:/Program Files/Eclipse Adoptium/jdk-25.0.1.8-hotspot",
        "default": true
      }
    ],
  // Point JDT LS directly to the JDK home (helps on some Windows setups). We point to the
  // installed Adoptium/Temurin JDK 25 which is compatible with Java 21 source level.
    "java.jdt.ls.java.home": "C:/Program Files/Eclipse Adoptium/jdk-25.0.1.8-hotspot",
    // Also ensure the `java.home` setting is set to the same JDK if other extensions use it.
    "java.home": "C:/Program Files/Eclipse Adoptium/jdk-25.0.1.8-hotspot",

  // Auto-configure the project when build files change
  "java.configuration.updateBuildConfiguration": "automatic",

  // Prefer Gradle import with wrapper
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true,

  // Helpful fallback if the Gradle import isnâ€™t active yet; points to Maven-style layout
  "java.project.sourcePaths": [
    "src/main/java"
  ],
  "java.project.referencedLibraries": [
    "lib/**/*.jar",
    "build/libs/*.jar"
  ],
  "java.compile.nullAnalysis.mode": "automatic",
  
  // Exclude test sources from compilation to avoid test errors
  "files.exclude": {
    "**/src/test/**": false
  },
  "java.project.resourceFilters": [
    "**/src/test/**"
  ],
  // Default integrated terminal profile for this workspace (prefer WSL/Ubuntu)
  // Use the 'WSL' profile so VS Code will open the default WSL distribution
  // You can change to a specific distro by setting args: ["-d", "Ubuntu"]
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": ["--login", "-i"]
    },
    "WSL": {
      "source": "wsl"
    }
  },
  // Default to Git Bash in this workspace - change back to "WSL" if you prefer WSL again
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "java.format.settings.url": ".vscode/java-formatter.xml",
  
  // Skip tests when building/debugging to avoid test compilation errors
  "java.debug.settings.vmArgs": "-Dskip.tests=true",
  "java.test.config": {
    "vmArgs": ["-Dspring.profiles.active=test"]
  },
  "java.debug.settings.onBuildFailureProceed": true
}
